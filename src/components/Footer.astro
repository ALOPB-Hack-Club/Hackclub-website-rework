---
    import { Icon } from "astro-icon/components";
    const links = {
      github: 'https://github.com/ALOPB-Hack-Club',
      facebook: 'https://facebook.com/LiceumPB',
      hackClub: 'https://hackclub.com',
      discord: 'https://discord.com/invite/v4m9dpdeWa'
    };
---
  
<footer style="margin-top: auto">
  <div class="footer-container">
    <div class="top-bar"></div>
    <div class="content-section">
      <div class="left-section">
        <div class="text">
          <span>Â© 2024 ALO HackClub</span>
        </div>
      </div>
      <div class="middle-section">
        <!-- Icons for social media -->
        <a href={links.github} target="_blank" aria-label="GitHub">
          <Icon name="github" class="icons"/>
        </a>
        <a href={links.facebook} target="_blank" aria-label="Facebook">
          <Icon name="facebook" class="icons"/>
        </a>
        <a href={links.hackClub} target="_blank" aria-label="Hack Club">
          <Icon name="hackclub" class="icons"/>
        </a>
        <a href={links.discord} target="_blank" aria-label="Discord">
          <Icon name="discord" class="icons"/>
        </a>
      </div>
      <div class="right-section">
        <!-- Optional content for the right section if needed -->
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-container {
    z-index: 100;
    position: relative;
    background-color: var(--header-color);
    color: var(--text);
    text-align: left;
    width: 100%;
  }

  .top-bar {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: var(--bar); /* Adjust color as needed */
  }

  .content-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
  }

  .left-section {
    left: 10px;
    flex: 1;
  }

  .middle-section {
    display: flex;
    justify-content: center;
    gap: 10px;
    animation: iconFadeIn 1s ease-out forwards;
  }

  .right-section {
    flex: 1;
    text-align: right;
  }

  .icons {
    margin: 15px;
    width: 50px;
    height: 50px; /* adjust size as needed */
    color: white;
    filter: brightness(0) var(--invert); /* makes images white */
  }

  @keyframes iconFadeIn {
    0% {
      transform: translateY(100px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    .icons {
        /* smaller size for mobile */
        width: 18px;
        height: 18px;
    }
    .text {
      font-size: 11px;
    }
  }
</style>
  