---
import { Icon } from "astro-icon/components";
import Menu from "../components/Menu.astro";
import ThemeSwitch from "../components/ThemeSwitch.astro";
---
<header>
    <div class="header-container">
        <div class="top-section">
            <div class="left-section">
                <Menu/>
            </div>
            <div class="middle-section">
                <a href="/">
                    <img src="/logo.png" alt="logo_alo" class="logo">
                </a>
            </div>
            <div class="right-section">
                <ThemeSwitch/>
            </div>
        </div>
        <div class="bottom-bar"></dir>
    </div>
</header>
  
  <style>
    .header-container {
      position: relative;
    }
  
    .top-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      background-color: var(--header-color);
      color: var(--text);
    }
  
    .bottom-bar {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background-color: var(--bar);
    }
  
    .left-section, .right-section {
      display: flex;
      align-items: center;
    }
    
    #menu-button{
        width: 100px; 
        height: 100px; 
        border-radius: 10px;
        transition: background-color 0.3s
    } 
    .theme-button, .login-button {
      transition: background-color 0.3s;
    }
  
    .menu-button:hover, .theme-button:hover, .login-button:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
  
    .logo {
      width: 75px; 
      height: auto;
      border-radius: 8px;
    }

    @media (max-width: 768px) {
      .menu-button, .theme-button, .login-button {
        scale: 0.75;
      }
      .logo {
        width: 50px;
      }
    
  </style>