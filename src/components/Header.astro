---
import { Icon } from "astro-icon/components";
import Menu from "../components/Menu.astro";
import ThemeSwitch from "../components/ThemeSwitch.astro";
---
<header>
    <div class="header-container">
        <div class="top-section">
            <div class="left-section">
                <Menu/>
            </div>
            <div class="middle-section">
                <a href="/">
                  <img src="/logo.png" alt="logo_alo" id="logo" class="logo">
                
                  <div class="text"><span class="gradient-text"><b>ALOPB</b></span> Hack Club</div>
                </a>
              </div>
            <div class="right-section">
                <ThemeSwitch/>
            </div>
        </div>
        <div class="bottom-bar"></dir>
    </div>
</header>
  
  <style is:inline>
    .header-container {
      position: relative;
      width: 100%;
    }
  
    .top-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      background-color: var(--header-color);
      color: var(--text);
    }
  
    .bottom-bar {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background-color: var(--bar);
    }

    .middle-section {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .left-section {
      display: flex;
      align-items: center;
      animation: menuFadeIn 1s ease-out forwards;
    }
    .right-section {
      display: flex;
      align-items: center;
      animation: themeFadeIn 1s ease-out forwards;
    }
    
    .theme-button {
      transition: background-color 0.3s;
    }
  
    .menu-button:hover, .theme-button:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
  
    .logo {
      width: 75px; 
      height: auto;
      border-radius: 8px;
      animation: logoFadeIn 1.25s ease-out forwards;
      margin-right: 10px;
      z-index: 2;
    }
    .text {
      font-size: 24px;
      animation: textFadeIn 1.25s ease-out forwards;
      z-index: 1;
    }
    .gradient-text {
        background: linear-gradient(90deg, var(--primary), var(--text));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    @keyframes logoFadeIn {
        0% {
            opacity: 0;
            transform: translateY(-50px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes textFadeIn {
        0% {
            opacity: 0;
            transform: translateX(-50px);
        }
        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes menuFadeIn {
      0%{
        opacity: 0;
        transform: translateX(-50px);
      }
      100%{
        opacity: 1;
        transform: translateX(0);
      }
    }
    @keyframes themeFadeIn {
      0%{
        opacity: 0;
        transform: translateX(50px);
      }
      100%{
        opacity: 1;
        transform: translateX(0);
      }
    }


    @media (max-width: 768px) {
      .menu-button, .theme-button, .login-button {
        scale: 0.75;
      }
      .logo {
        width: 50px;
      }
      .text {
        font-size: 18px;
      }
  </style>