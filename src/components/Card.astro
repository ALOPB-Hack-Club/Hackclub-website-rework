---
interface Props {
    title: string;
    href: string;
    image: string;
}

const { href, title,image } = Astro.props;
---

<div class="link-card">
    <a href={href}>
        <div class="card-header">
            <h2>{title}</h2>
        </div>
        <div class="image-container">
            <img src={image} alt={title}/>
        </div>
    </a>
</div>

<style>
.link-card {
    min-height: 20vw;
    width: 100%;
    display: flex;
    padding: 1px;
    background-color: var(--card-color);
    border-radius: 7px;
    border: none;
	transition: border .8s;
    position: relative;
    overflow: hidden;
    box-shadow: inset 0 0 0 1px var(--card-border);
    border: 1px solid transparent;
}

.link-card:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: var(--accent-gradient);
    opacity: 0;
    transition: opacity .8s;
}

.link-card:is(:hover, :focus-within) {
    border: 1px var(--accent) solid;
}

.link-card:is(:hover, :focus-within):before {
    opacity: 1;
}
    .link-card > a {	
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        border-radius: 8px;
        color: var(--text);
        background-color: var(--card-color);
        opacity: 0.8;
        display: flex;
        flex-direction: column;
        position: relative;
    }
	.card-header {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60px; /* Adjust this value to match the height of your header */
    width: 100%;
    background-color: var(--card-color);
    color: var(--text);
    z-index: 1;
	}

    .image-container {
        position: absolute; /* Adjust this value to match the height of your header */
        left: 0;
        width: 100%;
        height: 100%; /* Adjust this value to match the remaining space after the header */
        overflow: hidden;
    }

    .image-container > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
		border-radius: 0;
    }
	h2 {
		padding: 1rem;
	}
	@media (max-width: 768px) {
		.link-card {
			min-height: 30vw;
		}
		.card-header {
            height: 50px;
        }
		h2 {
			font-size: 13px;
		}
	}
</style>